{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "moduleResolution": "node",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": true,
      "lib": ["ES6", "DOM"],
      "allowJs": true,
      "resolveJsonModule": true
    },
    "include": ["src"]
}  